{% extends 'base.html.twig' %}

{% block title %}Hello{% if app.user %} {{ app.user.firstName }}{% endif %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-primary text-center">Hello there{% if app.user %} {{ app.user.firstName }} {{ app.user.lastName }}{% endif %}!</h1>

    {% if app.user %}
        <div class="alert alert-success">
            You are logged in as {{ app.user.email }}.
        </div>
    {% else %}
        <div class="alert alert-info">
            You are not logged in.
        </div>
    {% endif %}
    
    {% if is_granted('ROLE_ADMIN') %}
        <div class="alert alert-info">
            You are an admin for KnightSight.
        </div>
    {% elseif is_granted('ROLE_USER') %}
        <div class="alert alert-info">
            You are a user of KnightSight.
        </div>
    {% endif %}
</div>
{% endblock %}